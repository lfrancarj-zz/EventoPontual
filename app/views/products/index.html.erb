<p id="notice"><%= notice %></p>

<% if @products.length %>
  <h1>Você tem <%=@products.length%> produtos cadastrados</h1>
  <!-- Starting Products Table-->
  <table>
    <thead>
      <tr>
        <th>Code</th>
        <th>Name</th>
        <th>Price</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.code %></td>
          <td><%= product.name %></td>
          <td><%= product.price %></td>
          <td><%= link_to 'Show', product %></td>
          <td><%= link_to 'Edit', edit_product_path(product) %></td>
          <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <!-- Ending Products Table-->
<% else %>
  Não existem produtos cadastrados. <br>
  <%= link_to 'Quero cadastrar um produto', new_product_path %>
<% end %>



